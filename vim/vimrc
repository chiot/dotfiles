set textwidth=0
set nobackup
set autoread
set noswapfile
set hidden
set showcmd
set showmode
set smartcase
set ignorecase
set cmdheight=2
set laststatus=2

set number
set numberwidth=5
set showmatch
set matchtime=1
set cursorline
set ruler
set visualbell

set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set incsearch
set hlsearch
set ambiwidth=double

set statusline=%<\ %f\ %m%r%{'['.(&fenc!=''?&fenc:&enc).']['.&ff.']'}%=%l/%L,%v

syntax on

if has('mouse')
  set mouse=a
endif

autocmd BufNewFile,BufRead *.{md,mdwn,mdk,mkdn,mark*} set filetype=markdown

if has('vim_starting')
  if &compatible
    set nocompatible
  endif
  set runtimepath+=~/.vim/bundle/neobundle.vim/
endif

call neobundle#begin(expand('~/.vim/bundle/'))

NeoBundleFetch 'Shougo/neobundle.vim'

NeoBundle 'nanotech/jellybeans.vim'
NeoBundle 'Shougo/unite.vim'
NeoBundle 'Shougo/vimfiler.vim'
NeoBundle 'Shougo/vinarise'
NeoBundle 'Shougo/neocomplete'

call neobundle#end()

filetype on
filetype plugin indent on

NeoBundleCheck

let g:vimfiler_as_default_explorer=1
let g:vinarise_enable_auto_detect=1
let g:neocomplete#enable_at_startup=1
let g:neocomplete#enable_smart_case=1

colorscheme jellybeans

inoremap <expr><Tab> pumvisible() ? "\<C-n>" : "\<Tab>"
inoremap <expr><C-h> neocomplete#close_popup()."<C-h>"

imap () ()<LEFT>
imap [] []<LEFT>
imap {} {}<LEFT>
imap <> <><LEFT>
imap '' ''<LEFT>
imap "" ""<LEFT>
